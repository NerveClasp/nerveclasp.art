{
  "name": "nerveclasp-art",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "jest",
    "watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint src && prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint-fix": "eslint src --fix",
    "svgo": "svgo --config=./.svgo.json",
    "predeploy": "yarn test",
    "deploy": "yarn build && firebase deploy"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,scss,css,yaml,yml}": [
      "prettier --write"
    ],
    "*.svg": [
      "yarn svgo"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test && tsc --noEmit"
    }
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "recoil": "^0.0.13",
    "styled-components": "^5.2.0"
  },
  "devDependencies": {
    "@snowpack/app-scripts-react": "^1.10.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/classnames": "^2.2.10",
    "@types/reach__router": "^1.3.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/snowpack-env": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.9.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.0.5",
    "snowpack": "^2.11.0",
    "snowpack-plugin-svgr": "^0.1.2",
    "svgo": "^1.3.2",
    "typescript": "^3.9.7"
  }
}
